<!-- Views/Order/History.cshtml -->
@model List<Order>
<h2>Lịch sử đơn hàng</h2>
<table>
    <tr>
        <th>Mã đơn hàng</th>
        <th>Ngày đặt</th>
        <th>Tổng tiền</th>
        <th>Chi tiết</th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.OrderDate</td>
            <td>@order.TotalPrice</td>
            <td><a href="/Order/Details?id=@order.Id">Xem</a></td>
        </tr>
    }
</table>
